# Solidarity Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ===========================================
# SECURITY SETTINGS
# ===========================================
# JWT Secret - CHANGE THIS IN PRODUCTION
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Encryption Key for stored data
ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# DATABASE SETTINGS
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=solidarity_db
DB_USER=solidarity_user
DB_PASSWORD=your-database-password
DB_SSL=false

# Redis (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# ===========================================
# BLOCKCHAIN SETTINGS
# ===========================================
# Network: ethereum, solana, testnet
BLOCKCHAIN_NETWORK=ethereum
BLOCKCHAIN_ENVIRONMENT=testnet

# RPC Endpoints
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID
ETHEREUM_TESTNET_RPC_URL=https://goerli.infura.io/v3/YOUR-PROJECT-ID
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_TESTNET_RPC_URL=https://api.testnet.solana.com

# Wallet Private Keys (for automated transactions)
# NEVER expose these in production! Use hardware wallets or secure key management
# WALLET_PRIVATE_KEY=your-private-key-here

# ===========================================
# AI INTEGRATION SETTINGS
# ===========================================
# Ollama (Local AI - No API key needed)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# Perplexity (Optional - if using external AI)
PERPLEXITY_API_KEY=your-perplexity-api-key

# ===========================================
# FINANCIAL SETTINGS
# ===========================================
# Enable test mode by default for safety
FINANCIAL_TEST_MODE=true

# Gas settings
MAX_GAS_PRICE=100
DEFAULT_GAS_LIMIT=500000

# Transaction settings
TRANSACTION_CONFIRMATIONS=3
AUTO_GAS_ESTIMATION=true

# ===========================================
# API KEYS (if needed)
# ===========================================
# External services API keys
# API_KEY_SERVICE_NAME=your-api-key

# ===========================================
# CORS SETTINGS
# ===========================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# MONITORING AND LOGGING
# ===========================================
# Log file path
LOG_FILE_PATH=./logs/app.log

# Sentry (Error tracking)
# SENTRY_DSN=your-sentry-dsn

# ===========================================
# SAFETY SYSTEM SETTINGS
# ===========================================
# Base ratio (Ï† = 1.618 per Henry 7 Step 14 Trott Waltz)
BASE_RATIO=1.618
BRIDGING_BASELINE=0.618
SAFETY_LEVEL=0.618

# Safety thresholds
SAFETY_MIN=0.03
SAFETY_MAX=0.97

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Auto-reload on file changes
AUTO_RELOAD=true
